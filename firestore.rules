rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Users
    match /users/{uid} {
      // Owner can read their own profile
      allow read: if isSignedIn() && request.auth.uid == uid;

      // Allow owner to create/update own doc (includes isPremium for now)
      allow create: if isSignedIn() && request.auth.uid == uid;
      allow update: if isSignedIn() && request.auth.uid == uid;

      // Optional nested collections used by UI (owner-only)
      match /sessions/{sessionId} {
        allow read, write: if isSignedIn() && request.auth.uid == uid;
      }

      match /favorites/{favoriteId} {
        allow read, write: if isSignedIn() && request.auth.uid == uid;
      }
    }

    // Top-level favorites: each doc represents a user-meditation favorite
    // Doc shape: { userId, meditationId, createdAt }
    match /favorites/{favoriteId} {
      // Owner-only reads
      allow read: if isSignedIn() && resource.data.userId == request.auth.uid;

      // Allow create for self only; bind userId to auth uid
      allow create: if isSignedIn() && request.resource.data.userId == request.auth.uid;

      // No updates (immutability of favorite tuple); delete allowed by owner
      allow update: if false;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // Session history stored at userProgress/{uid}/sessions/*
    match /userProgress/{uid} {
      allow read, write: if isSignedIn() && request.auth.uid == uid;

      match /sessions/{sessionId} {
        allow read, write: if isSignedIn() && request.auth.uid == uid;
      }
    }

    // Meditations
    match /meditations/{meditationId} {
      // Public reads for published; admins may read all
      allow read: if resource.data.status == 'published' || isAdmin();

      // Admins manage content
      allow create, update, delete: if isAdmin();

      // Additionally allow signed-in users to increment playCount by exactly +1
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data).changedKeys().hasOnly(['playCount'])
        && request.resource.data.playCount == resource.data.playCount + 1;
    }

    // Categories
    match /categories/{categoryId} {
      // Permit reading categories; UI filters active client-side
      allow read: if true;
      allow create, update, delete: if isAdmin();
    }

    // Admin audit: append-only by admins; no updates/deletes
    match /adminAudit/{auditId} {
      allow create: if isAdmin();
      allow read: if isAdmin();
      allow update, delete: if false;
    }

    // Default deny
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
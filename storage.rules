rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    // Admin-managed content uploads with public read
    match /images/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /audio/{id} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Reserved for future user uploads
    match /users/{userId}/{allPaths=**} {
      allow write: if isSignedIn() && request.auth.uid == userId;
    }
  }
}